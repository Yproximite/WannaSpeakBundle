<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Yproximite\WannaSpeakBundle\Api\Statistics" class="Yproximite\WannaSpeakBundle\Api\Statistics" public="true">
            <argument type="service" id="Yproximite\WannaSpeakBundle\Api\WannaSpeakHttpClient"/>
        </service>

        <service id="Yproximite\WannaSpeakBundle\Api\WannaSpeakHttpClient" class="Yproximite\WannaSpeakBundle\Api\WannaSpeakHttpClient" public="true">
            <argument>%wanna_speak.api.account_id%</argument>
            <argument>%wanna_speak.api.secret_key%</argument>
            <argument>%wanna_speak.api.base_url%</argument>
            <argument>%wanna_speak.api.test%</argument>
            <argument>null</argument>
        </service>
    </services>
</container>
