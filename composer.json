{
    "name": "yproximite/wanna-speak-bundle",
    "description": "Symfony Bundle for the WannaSpeak API",
    "keywords": ["wannaspeak", "statistics", "call-tracking", "symfony", "bundle"],
    "homepage": "https://github.com/Yproximite/WannaSpeakBundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "scripts": {
        "phpstan": "phpstan analyze --ansi",
        "php-cs-fixer": "php-cs-fixer fix -v",
        "php-cs-fixer@ci": "php-cs-fixer fix -v --diff --dry-run",
        "phpunit": "simple-phpunit",
        "phpspec": "phpspec --ansi"
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "symfony/framework-bundle": "^4.4.11 || ^5.3",
        "symfony/http-client": "^4.4.11 || ^5.3",
        "symfony/mime": "^4.4.11 || ^5.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.52",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-strict-rules": "^0.12.5",
        "symfony/phpunit-bridge": "^6.0.8",
        "phpspec/phpspec": "^7.0"
    },
    "autoload": {
        "psr-4": { "Yproximite\\WannaSpeakBundle\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Yproximite\\WannaSpeakBundle\\Tests\\": "tests" }
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
